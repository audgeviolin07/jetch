        "nanoid": "^5.1.6",
        "perfect-freehand": "^1.2.2",
        "react": "^19",
        "react-dom": "^19",
        "react-icons": "^5.5.0",
        "resend": "^6.5.2",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/canvas-confetti": "^1.9.0",
        "@types/earcut": "^3.0.0",
        "@types/node": "^24.10.1",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "typescript": "^5"
    }
}
